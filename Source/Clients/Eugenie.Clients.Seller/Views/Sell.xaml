<UserControl x:Class="Eugenie.Clients.Seller.Views.Sell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="20"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             DataContext="{Binding Path=SellViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Label x:Name="lblSellerName"
               Content="{Binding FullName}"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Left"
               Height="60"
               Width="Auto"
               FontSize="40" />
        <TextBox x:Name="txtBarcode"
                 Visibility="Hidden"
                 IsReadOnly="True"
                 IsTabStop="False"
                 Text="{Binding Path=Barcode, Mode=TwoWay, UpdateSourceTrigger=Explicit}" />
        <DataGrid x:Name="dataGrid"
                  FontSize="30"
                  ItemsSource="{Binding Products}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,63,0,107"
                  BorderBrush="AliceBlue"
                  BorderThickness="2"
                  CanUserSortColumns="False"
                  SelectedItem="{Binding SelectedItem}">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                 Color="DeepSkyBlue" />
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="№"
                                    Binding="{Binding Id}"
                                    Width="Auto">
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="nameColumn"
                                    Header="Име"
                                    Binding="{Binding Name}"
                                    Width="*">
                </DataGridTextColumn>
                <DataGridTextColumn Header="М-ка"
                                    Binding="{Binding Measure}"
                                    Width="Auto">
                </DataGridTextColumn>
                <DataGridTextColumn Header="К-во"
                                    Binding="{Binding Quantity}"
                                    Width="Auto">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Eд. цена"
                                    Binding="{Binding SellingPrice, StringFormat={}{0:0.00}}"
                                    Width="Auto">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Converter={StaticResource totalSellingPriceConverter}, StringFormat={}{0:0.00}}"
                                    Width="Auto">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblPrice"
               Content="Сума:"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Height="60"
               Width="110"
               FontSize="40"
               Margin="0,0,180,36" />
        <TextBlock x:Name="txtPrice"
                   Focusable="False"
                   FontSize="40"
                   Text="{Binding Price, StringFormat={}{0:0.00}}"
                   Height="60"
                   Width="160"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0,0,10,27" />
        <Label x:Name="lblInfo"
               Content="Delete - изтрий, F1 - търсене, F10 - бракувай, F11 - касова бележка, F12 - без касова бележка, Alt+F5 - изход"
               HorizontalAlignment="Left"
               Margin="10,0,0,10"
               VerticalAlignment="Bottom"
               Width="Auto" />
        <Label x:Name="lblVersion"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Width="Auto" />
    </Grid>
</UserControl>
