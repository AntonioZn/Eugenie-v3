<UserControl x:Class="Eugenie.Clients.Seller.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:Eugenie.Clients.Seller.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="20"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             DataContext="{Binding Path=SettingsViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Mode="PrimaryDark"
                                  Grid.Row="0"
                                  Panel.ZIndex="1"
                                  Padding="10"
                                  IsTabStop="False"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <TextBlock Text="Настройки"
                       Style="{StaticResource MaterialDesignDisplay3TextBlock}" />
        </materialDesign:ColorZone>
        <StackPanel Grid.Row="1"
                    Width="450"
                    HorizontalAlignment="Left"
                    Margin="20">
            <TextBlock Text="Самостоятелно хостване"
                       Margin="20,0,0,0"
                       Style="{StaticResource MaterialDesignDisplay1TextBlock}" />
            <Border Padding="8"
                    BorderThickness="1,1,1,1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <StackPanel>
                    <TextBox materialDesign:TextFieldAssist.Hint="Порт"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox Content="Автоматичен старт"
                              IsChecked="{Binding IsSelfHost}"
                              VerticalContentAlignment="Center" />
                    <CheckBox Content="Автоматичен бекъп на базата данни"
                              IsChecked="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.BackupDatabase, UpdateSourceTrigger=PropertyChanged}"
                              VerticalContentAlignment="Center"
                              Margin="0,10,0,0" />
                    <TextBox materialDesign:TextFieldAssist.Hint="Път до папка за бекъп"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.BackupPath, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,0" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                Margin="0,10,0,0">
                        <TextBox materialDesign:TextFieldAssist.Hint="Час"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Text="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.BackupHours, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,10,0" />
                        <TextBox materialDesign:TextFieldAssist.Hint="Минути"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Text="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.BackupMinutes, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <TextBlock Text="Връзка"
                       Margin="20,10,0,0"
                       Style="{StaticResource MaterialDesignDisplay1TextBlock}" />
            <Border Padding="8"
                    BorderThickness="1,1,1,1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <TextBox materialDesign:TextFieldAssist.Hint="Адрес"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />
            </Border>
            <TextBlock Text="Папки"
                       Margin="20,10,0,0"
                       Style="{StaticResource MaterialDesignDisplay1TextBlock}" />
            <Border Padding="8"
                    BorderThickness="1,1,1,1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <StackPanel>
                    <TextBox Margin="0,10,0,0"
                             materialDesign:TextFieldAssist.Hint="Път до папка на лог файла"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.LogPath, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Margin="0,10,0,0"
                             materialDesign:TextFieldAssist.Hint="Път до папка на касова бележка"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Source={x:Static helpers:SettingsManager.Default}, Path=Settings.ReceiptPath, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>
            <Button Margin="0,10,0,0"
                    Content="Запази"
                    IsDefault="True"
                    Command="{Binding Save}" />
        </StackPanel>
        <TextBlock Grid.Row="1"
                   Style="{StaticResource MaterialDesignDisplay1TextBlock}"
                   FontSize="20"
                   Text="{Binding Version}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="10,0,0,10" />
    </Grid>
</UserControl>