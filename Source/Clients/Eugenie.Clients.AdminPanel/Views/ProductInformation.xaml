<UserControl x:Class="Eugenie.Clients.AdminPanel.Views.ProductInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="800"
             Width="800"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="16"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="20,20,0,0"
                            Orientation="Vertical">
                    <TextBox materialDesign:TextFieldAssist.Hint="Име"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Height="40"
                             Width="300"
                             HorizontalAlignment="Left"
                             Text="{Binding FirstProduct.Name}" />
                    <ComboBox materialDesign:TextFieldAssist.Hint="Мярка"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Margin="0,10,0,0"
                              Height="40"
                              Width="300"
                              HorizontalAlignment="Left">
                        <ComboBoxItem>бр</ComboBoxItem>
                        <ComboBoxItem>кг</ComboBoxItem>
                        <ComboBoxItem>л</ComboBoxItem>
                    </ComboBox>
                    <TextBox materialDesign:TextFieldAssist.Hint="Доставна цена"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,10,0,0"
                             Height="40"
                             Width="300"
                             HorizontalAlignment="Left"
                             Text="{Binding FirstProduct.BuyingPrice}" />
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              MaxHeight="140"
                              IsTabStop="False"
                              Margin="20,20,20,0"
                              VerticalAlignment="Top">
                    <ItemsControl ItemsSource="{Binding FirstProduct.Barcodes}"
                                  IsTabStop="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Border x:Name="Border"
                                            Padding="8"
                                            BorderThickness="0 0 0 1"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                                        <TextBlock Text="{Binding Value}" />
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              IsTabStop="False"
                              Margin="20,20,20,0"
                              VerticalAlignment="Top">
                    <ItemsControl IsTabStop="False"
                                  ItemsSource="{Binding Products}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox materialDesign:TextFieldAssist.Hint="Магазин"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             Height="40"
                                             IsTabStop="False"
                                             Width="100"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Key.Name}" />
                                    <TextBox materialDesign:TextFieldAssist.Hint="Количество"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             Margin="20,0,0,0"
                                             Height="40"
                                             Width="100"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Value.Quantity}" />
                                    <TextBox materialDesign:TextFieldAssist.Hint="Продажна цена"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             Margin="20,0,0,0"
                                             Height="40"
                                             Width="100"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Value.SellingPrice}" />
                                    <Expander IsExpanded="False"
                                              IsTabStop="False"
                                              Margin="20,0,0,0"
                                              HorizontalAlignment="Stretch">
                                        <Expander.Header>
                                            <TextBlock Text="Годност" />
                                        </Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                          IsTabStop="False"
                                                          VerticalAlignment="Top"
                                                          MaxHeight="140">
                                                <ItemsControl IsTabStop="False"
                                                              Margin="0,0,4,0"
                                                              ItemsSource="{Binding Value.ExpirationDates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Vertical">
                                                                <Border BorderThickness="0 0 0 1"
                                                                        BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                                    <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                                                               Margin="0,3,0,0"/>
                                                                </Border>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                            <StackPanel Margin="20,0,0,0">
                                                <DatePicker HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            materialDesign:TextFieldAssist.Hint="Избери дата"
                                                            Height="24"
                                                            IsTabStop="False" />
                                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                        Content="Добави"
                                                        Margin="0,5,0,0"
                                                        ToolTip="Resource name: MaterialDesignRaisedButton"
                                                        IsTabStop="False" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,20">
            <Button IsDefault="True"
                    IsTabStop="False"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="Запази">
                <Button.CommandParameter>
                    <System:Boolean>True</System:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button IsCancel="True"
                    IsTabStop="False"
                    Margin="8 0 0 0"
                    Content="Назад"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                <Button.CommandParameter>
                    <System:Boolean>False</System:Boolean>
                </Button.CommandParameter>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>