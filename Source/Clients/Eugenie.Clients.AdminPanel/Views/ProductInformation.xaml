<UserControl x:Class="Eugenie.Clients.AdminPanel.Views.ProductInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto"
             Width="Auto"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="20"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20,20,0,0"
                        Orientation="Vertical">
                <TextBox materialDesign:TextFieldAssist.Hint="Име"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Width="420"
                         HorizontalAlignment="Left"
                         Text="{Binding FirstProduct.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox materialDesign:TextFieldAssist.Hint="Мярка"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="0,10,0,0"
                          Width="420"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding Measures}"
                          SelectedItem="{Binding FirstProduct.Measure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                </ComboBox>
                <TextBox materialDesign:TextFieldAssist.Hint="Доставна цена"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10,0,0"
                         Width="420"
                         HorizontalAlignment="Left"
                         Text="{Binding FirstProduct.BuyingPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                          MaxHeight="160"
                          IsTabStop="False"
                          Margin="20,20,20,0"
                          VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding FirstProduct.Barcodes}"
                              IsTabStop="False">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Border x:Name="Border"
                                        Padding="8"
                                        BorderThickness="0 0 0 1"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}">
                                    <TextBlock Text="{Binding Value}" />
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      IsTabStop="False"
                      Margin="20,20,20,0"
                      MaxHeight="400"
                      VerticalAlignment="Top">
            <StackPanel>
                <ItemsControl IsTabStop="False"
                              ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="Border"
                                    Padding="8"
                                    BorderThickness="1,1,1,0"
                                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox materialDesign:TextFieldAssist.Hint="Магазин"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             IsTabStop="False"
                                             Focusable="False"
                                             IsReadOnly="True"
                                             Width="Auto"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Key.Name}" />
                                    <TextBox materialDesign:TextFieldAssist.Hint="{Binding Value.Quantity}"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             Margin="20,0,0,0"
                                             Width="100"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Value.QuantityToAdd}" />
                                    <TextBox materialDesign:TextFieldAssist.Hint="Продажна цена"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             VerticalAlignment="Top"
                                             Margin="20,0,0,0"
                                             Width="100"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Value.SellingPrice}" />
                                    <Expander IsExpanded="False"
                                              IsTabStop="False"
                                              Margin="20,0,0,0"
                                              HorizontalAlignment="Stretch">
                                        <Expander.Header>
                                            <TextBlock Text="Годности" />
                                        </Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                                          IsTabStop="False"
                                                          VerticalAlignment="Top"
                                                          MaxHeight="140">
                                                <ItemsControl IsTabStop="False"
                                                              ItemsSource="{Binding Value.ExpirationDates}"
                                                              Margin="0,0,5,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Vertical">
                                                                <Border BorderThickness="0 0 0 1"
                                                                        BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                                    <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}"
                                                                               Margin="0,3,0,0" />
                                                                </Border>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </Expander>
                                    <StackPanel Margin="20,0,0,0">
                                        <DatePicker HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    materialDesign:TextFieldAssist.Hint="Избери дата"
                                                    IsTabStop="False" />
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Content="Добави"
                                                Margin="0,5,0,0"
                                                IsTabStop="False" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Border BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource MaterialDesignDivider}" />
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,20,20,20">
            <Button IsDefault="True"
                    IsTabStop="False"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="Запази">
                <Button.CommandParameter>
                    <System:Boolean>True</System:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button IsCancel="True"
                    IsTabStop="False"
                    Margin="8 0 0 0"
                    Content="Назад"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                <Button.CommandParameter>
                    <System:Boolean>False</System:Boolean>
                </Button.CommandParameter>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>